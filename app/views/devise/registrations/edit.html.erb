<div class='row justify-content-center text-center'>
  <h2 class="mb-3">Change account password</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'col-sm-8 col-md-6' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field form-floating mb-3">
      <%= f.password_field :current_password, 
                           autocomplete: "current-password",
                           class: 'form-control',
                           placeholder: 'Old password' %>
      <%= f.label :current_password, 'Old password' %> 
    </div>

    <div class="field form-floating mb-3">
      <%= f.password_field :password,
                          autocomplete: "new-password",
                          class: 'form-control',
                          placeholder: 'New password' %>
      <%= f.label :password, 'New password'.concat(@minimum_password_length ? " (#{@minimum_password_length} characters minimum)" : '') %>
    </div>

    <div class="field form-floating mb-3">
      <%= f.password_field :password_confirmation,
                          autocomplete: "new-password",
                          class: 'form-control',
                          placeholder: 'New password confirmation' %>
      <%= f.label :password_confirmation, 'New password confirmation' %>
    </div>

    <div class="actions btn-group">
      <%= link_to "Cancel", :back, class: 'btn btn-outline-primary col-5 mb-3 px-3' %>
      <%= f.submit "Update", class: 'btn btn-primary col-5 mb-3 px-3' %>
    </div>
  <% end %>

</div>
