<div class='row justify-content-center text-center'>
  <h2 class="mb-3">Register new account</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'col-sm-8 col-md-6' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field form-floating mb-3">
      <%= f.email_field :email,
                        autofocus: true,
                        autocomplete: "email",
                        class: 'form-control',
                        placeholder: 'Email address' %>
      <%= f.label :email %>
    </div>

    <div class="field form-floating mb-3">
      <%= f.text_field :name,
                      autocomplete: "name",
                      class: 'form-control',
                      placeholder: 'Name' %>
      <%= f.label :name %>
    </div>

    <div class="field form-floating mb-3">
      <%= f.password_field :password,
                          autocomplete: "new-password",
                          class: 'form-control',
                          placeholder: 'Password' %>
      <%= f.label :password, 'Password'.concat(@minimum_password_length ? " (#{@minimum_password_length} characters minimum)" : '') %>
    </div>

    <div class="field form-floating mb-3">
      <%= f.password_field :password_confirmation,
                          autocomplete: "new-password",
                          class: 'form-control',
                          placeholder: 'Confirm password' %>
      <%= f.label :password_confirmation %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'btn btn-primary col-5 mb-3' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
