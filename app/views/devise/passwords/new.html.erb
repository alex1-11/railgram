<div class='row justify-content-center text-center'>
  <h2 class="mb-3">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'col-sm-8 col-md-6' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field form-floating mb-3">
      <%= f.email_field :email,
                        autofocus: true,
                        autocomplete: "email",
                        class: 'form-control',
                        placeholder: 'Email address' %>
      <%= f.label :email %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: 'btn btn-primary mx-auto' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
