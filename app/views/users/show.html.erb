<div class='bg-secondary-subtle'>
  <%= render partial: 'users/profile', locals: { user: @user } %>

  <div class="post-thumbnails container text-center">
    <div class="row row-cols-auto g-0 justify-content-center">
      <% @posts.each do |post| %>
          <%= link_to(image_tag(post.image_url(:thumbnail), class: 'img-fluid mx-auto d-block object-fit-fill'), "#{user_posts_path(@user)}##{dom_id post}", class: 'col align-self-center') %>
      <% end %>
    </div>
  </div>
</div>
