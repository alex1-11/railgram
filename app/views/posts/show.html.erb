<p style="color: green"><%= notice %></p>

<%= render @post %>

<div>
  <%= link_to "Back to #{@user.name}'s posts", user_posts_path(@user) %> |
  <% if @user == current_user %>
    <%= link_to 'Edit this post', edit_user_post_path(current_user, @post) %>
    <%= button_to 'Destroy this post', user_post_path(current_user, @post),
      data: { turbo_confirm: 'Are sure you want to delete this post?',
              confirm: 'Are sure you want to delete this post?' },
      method: 'delete' %>
  <% end %>
</div>
