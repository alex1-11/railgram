<%= render partial: 'posts/post', 
           locals: { post: @post,
                     likes: @likes,
                     viewer: @viewer } %>

<div>
  <%= link_to "Back", :back %>
  <% if @own_post %>
     | <%= link_to 'Edit this post', edit_post_path(@post) %>
    <%= button_to 'Destroy this post', post_path(@post),
      data: { turbo_confirm: 'Are sure you want to delete this post?',
              confirm: 'Are sure you want to delete this post?' },
      method: 'delete' %>
  <% end %>
</div>
