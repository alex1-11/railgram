<div class='row justify-content-between m-0 p-0'>
  <%= link_to "< Back", :back, class: 'col-2 btn btn-outline-primary' %>
  <% if @own_post %>
    <div class='col-8 text-end p-0'>
      <%= link_to 'Edit this post', edit_post_path(@post), class: 'btn btn-outline-primary' %>
      <%= button_to('Destroy this post', post_path(@post),
        data: { turbo_confirm: 'Are sure you want to delete this post?',
                confirm: 'Are sure you want to delete this post?' },
        method: :delete,
        class: 'btn btn-outline-primary',
        form_class: 'd-inline') %>
    </div>
  <% end %>
</div>

<%= render partial: 'posts/post', 
           locals: { post: @post,
                     likes: @likes } %>
