<%= link_to 'Back', :back %>

<div id="caption">
  <p>
    <strong><%= @post.user.name %> </strong>
    <%= @post.caption %>
  </p>
</div>

<h2>Comments</h2>

<div id="comments">
  <% @comments.each do |comment| %>
    <%= render comment, comment:, post: @post if comment.present? %>
  <% end %>
</div>

<%= render 'form', comment: @new_comment, post: @post %>
