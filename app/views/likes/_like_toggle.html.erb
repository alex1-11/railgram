<%= turbo_frame_tag "like_toggle" do %>
  <p>
    <% if post.liking_users.find_by(id: current_user.id) %>
      <%= button_to "Unlike | #{post.likes.count}", like_path(post), method: :delete %>
    <% else %>
      <%= button_to "Like | #{post.likes.count}", likes_path(post), method: :post %>
    <% end %>
  </p>
<% end %>
